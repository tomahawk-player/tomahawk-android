<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/padding_superlarge"
              android:paddingRight="@dimen/padding_superlarge"
              android:paddingTop="@dimen/padding_small"
              android:paddingBottom="@dimen/padding_small"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:descendantFocusability="afterDescendants"
              android:background="@drawable/selectable_background_tomahawk_opaque"
              android:clickable="true">

    <FrameLayout android:layout_width="@dimen/row_height_verylarge"
                 android:layout_height="@dimen/row_height_verylarge"
                 android:layout_gravity="center">

        <ImageView android:id="@+id/userimageview1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/circle_black"/>

        <TextView android:id="@+id/usertextview1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:textSize="@dimen/text_size_verylarge"
                  android:textColor="@color/primary_textcolor_inverted"/>

    </FrameLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:layout_gravity="center_vertical"
                  android:paddingLeft="@dimen/padding_small"
                  android:baselineAligned="false"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_verysmall"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/primary_textcolor"
                android:textSize="@dimen/text_size_medium"/>

        <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/secondary_textcolor"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/secondary_textcolor"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>