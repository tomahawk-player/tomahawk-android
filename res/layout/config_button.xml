<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

    <LinearLayout
            android:id="@+id/config_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height_large"
            android:orientation="vertical"
            android:background="@drawable/selectable_background_tomahawk">

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/divider"/>

        <TextView
                android:id="@+id/config_button_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_textcolor"/>

    </LinearLayout>

</FrameLayout>