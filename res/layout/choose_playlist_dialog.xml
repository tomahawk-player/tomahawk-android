<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/primary_background">

    <ListView
            android:id="@+id/playlist_dialog_playlists_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thick"
            android:background="@color/tomahawk_red"/>

    <LinearLayout
            android:id="@+id/playlist_dialog_addplaylist_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height_large"
            android:background="@drawable/selectable_background_tomahawk"
            android:clickable="true">
        <ImageView
                android:layout_width="@dimen/row_height_large"
                android:layout_height="@dimen/row_height_large"
                android:src="@drawable/ic_action_add"/>
        <TextView
                android:id="@+id/playlist_dialog_addplaylist_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:padding="@dimen/padding_small"
                android:singleLine="true"
                android:textColor="@color/primary_textcolor"
                android:text="@string/playbackactivity_create_playlist_dialog_title"
                android:textSize="@dimen/text_size_large"/>
    </LinearLayout>

</LinearLayout>