<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_gravity="center"
              android:background="@drawable/selectable_background_tomahawk">

    <ImageView android:id="@+id/imageview"
               android:layout_width="12dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:visibility="gone"/>

    <TextView android:id="@+id/textview"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:layout_marginLeft="@dimen/padding_verysmall"
              android:textColor="@color/primary_textcolor_inverted"
              android:textSize="@dimen/text_size_small"/>

    <ImageView android:id="@+id/arrow"
               android:layout_width="12dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="@dimen/padding_verysmall"
               android:layout_gravity="center"
               android:src="@drawable/ic_action_navigation_expand"
               android:visibility="gone"/>

</LinearLayout>