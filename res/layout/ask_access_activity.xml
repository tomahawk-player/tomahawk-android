<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primary_background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/primary_background">

        <ImageView android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:padding="@dimen/padding_medium"
                   android:src="@drawable/logo_hatchet"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:padding="@dimen/padding_medium"
                  android:gravity="center"
                  android:text="@string/ask_access_activity_header"
                  android:textColor="@color/primary_textcolor"
                  android:textSize="@dimen/text_size_verylarge"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/padding_medium"
                  android:gravity="center"
                  android:text="@string/ask_access_activity_text1"
                  android:textColor="@color/primary_textcolor"
                  android:textSize="@dimen/text_size_large"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/padding_small"
                  android:gravity="center"
                  android:text="@string/ask_access_activity_text2"
                  android:textColor="@color/primary_textcolor"
                  android:textSize="@dimen/text_size_micro"/>

        <Button android:id="@+id/ask_access_button_go_to_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ask_access_activity_button_text"/>

    </LinearLayout>

</LinearLayout>