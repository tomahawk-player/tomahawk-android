<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mainclickarea"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:background="@drawable/selectable_background_tomahawk_opaque">

    <org.tomahawk.tomahawk_android.ui.widgets.SquareWidthFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView android:id="@+id/userimageview1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/circle_black"/>

        <TextView android:id="@+id/usertextview1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="@dimen/text_size_verylarge"
                  android:textColor="@color/primary_textcolor_inverted"/>

    </org.tomahawk.tomahawk_android.ui.widgets.SquareWidthFrameLayout>

    <TextView android:id="@+id/textview1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/padding_small"
              android:paddingBottom="@dimen/padding_small"
              android:ellipsize="marquee"
              android:singleLine="true"
              android:textColor="@color/primary_textcolor"
              android:textSize="@dimen/text_size_small"
              android:textStyle="bold"/>

</LinearLayout>