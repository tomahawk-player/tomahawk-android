<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/context_menu_fragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clickable="true"
             android:descendantFocusability="afterDescendants">

    <org.tomahawk.tomahawk_android.views.TopCropImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <View android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/tertiary_transparent"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="@dimen/playback_panel_height">

                <LinearLayout android:id="@+id/close_button"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:paddingLeft="@dimen/padding_superlarge"
                              android:paddingRight="@dimen/padding_superlarge"
                              android:paddingBottom="@dimen/padding_verysmall"
                              android:paddingTop="@dimen/padding_verysmall"
                              android:background="@drawable/selectable_background_button_white"
                              android:clickable="true">

                    <TextView android:id="@+id/close_button_text"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_vertical"
                              android:singleLine="true"
                              android:textSize="@dimen/text_size_micro"
                              android:textColor="@color/primary_textcolor_inverted"/>

                    <ImageView android:layout_width="12dp"
                               android:layout_height="12dp"
                               android:layout_marginLeft="@dimen/padding_small"
                               android:layout_gravity="center_vertical"
                               android:src="@drawable/ic_navigation_close"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:baselineAligned="false"
                          android:layout_marginTop="@dimen/padding_medium">

                <ViewStub android:id="@+id/context_menu_addtoplaylist_stub"
                          android:layout="@layout/context_menu_item"
                          android:inflatedId="@+id/context_menu_addtoplaylist"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                <ViewStub android:id="@+id/context_menu_createstation_stub"
                          android:layout="@layout/context_menu_item"
                          android:inflatedId="@+id/context_menu_createstation"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:baselineAligned="false">

                <ViewStub android:id="@+id/context_menu_addtocollection_stub"
                          android:layout="@layout/context_menu_item"
                          android:inflatedId="@+id/context_menu_addtocollection"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                <ViewStub android:id="@+id/context_menu_favorite_stub"
                          android:layout="@layout/context_menu_item"
                          android:inflatedId="@+id/context_menu_favorite"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                <ViewStub android:id="@+id/context_menu_addtoqueue_stub"
                          android:layout="@layout/context_menu_item"
                          android:inflatedId="@+id/context_menu_addtoqueue"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

                <ViewStub android:id="@+id/context_menu_share_stub"
                          android:layout="@layout/context_menu_item"
                          android:inflatedId="@+id/context_menu_share"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"/>

            </LinearLayout>

            <ViewStub android:id="@+id/context_menu_remove_stub"
                      android:layout="@layout/context_menu_item"
                      android:inflatedId="@+id/context_menu_remove"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginBottom="@dimen/padding_medium"/>

            <ViewStub android:id="@+id/track_name_stub"
                      android:layout="@layout/context_menu_textview"
                      android:inflatedId="@+id/track_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/padding_medium"/>

            <ViewStub android:id="@+id/album_name_button_stub"
                      android:layout="@layout/context_menu_button_white_bold"
                      android:inflatedId="@+id/album_name_button"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/padding_medium"/>

            <ViewStub android:id="@+id/artist_name_button_stub"
                      android:layout="@layout/context_menu_button_white"
                      android:inflatedId="@+id/artist_name_button"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/padding_medium"/>

            <ViewStub android:id="@+id/context_menu_albumart_stub"
                      android:layout="@layout/context_menu_albumart"
                      android:inflatedId="@+id/context_menu_albumart"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="@dimen/padding_large"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>