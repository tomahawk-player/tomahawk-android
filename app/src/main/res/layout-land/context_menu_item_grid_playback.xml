<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/playback_panel_height"
              android:layout_marginBottom="@dimen/playback_panel_height"
              android:paddingTop="@dimen/padding_medium"
              android:paddingBottom="@dimen/padding_medium"
              android:layout_gravity="center_vertical">

    <ViewStub android:id="@+id/context_menu_favorite_stub"
              android:layout="@layout/context_menu_item"
              android:inflatedId="@+id/context_menu_favorite"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <ViewStub android:id="@+id/context_menu_addtoplaylist_stub"
              android:layout="@layout/context_menu_item"
              android:inflatedId="@+id/context_menu_addtoplaylist"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <ViewStub android:id="@+id/context_menu_playnext_stub"
              android:layout="@layout/context_menu_item"
              android:inflatedId="@+id/context_menu_playnext"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <ViewStub android:id="@+id/context_menu_createstation_stub"
              android:layout="@layout/context_menu_item"
              android:inflatedId="@+id/context_menu_createstation"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <ViewStub android:id="@+id/context_menu_share_stub"
              android:layout="@layout/context_menu_item"
              android:inflatedId="@+id/context_menu_share"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

    <ViewStub android:id="@+id/context_menu_addtoqueue_stub"
              android:layout="@layout/context_menu_item"
              android:inflatedId="@+id/context_menu_addtoqueue"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>

</LinearLayout>
